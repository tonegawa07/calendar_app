<p id="notice"><%= notice %></p>

<h1>ICP-OES 予約システム</h1>

<h2>直近の使用予定</h2>

<table>
  <thead>
    <tr>
      <th>使用日</th>
      <th>予約日</th>
      <th>研究室名</th>
      <th>使用者</th>
      <th>サンプル数</th>
      <th>開始時間</th>
      <th>終了時間</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.where("end_time >= ?", Time.now).order(:end_time).limit(5).each do |reservation| %>
      <tr>
        <td><%= reservation.start_time.strftime('%Y/%m/%d') %></td>
        <td><%= reservation.updated_at.strftime('%Y/%m/%d') %></td>
        <td><%= reservation.lab %></td>
        <td><%= reservation.name %></td>
        <td><%= reservation.number_of_samples %></td>
        <td><%= reservation.start_time.strftime('%H:%M') %></td>
        <td><%= reservation.end_time.strftime('%H:%M') %></td>
        <td><%= reservation.information %></td>
        <td><%= link_to '詳細', reservation %></td>
        <td><%= link_to '予約内容の変更', edit_icp_reservation_path(reservation) %></td>
        <td><%= link_to '削除', reservation, method: :delete, data: { confirm: '本当に削除してよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= month_calendar events: @reservations do |date, reservations| %>
  <%= date %>

  <% reservations.each do |reservation| %>
    <div>
      <%= reservation.name %>
      <%= reservation.start_time.strftime('%H:%M') %>-<%= reservation.end_time.strftime('%H:%M') %>
      <%= link_to '詳細', reservation %>
      <%= link_to '変更', edit_icp_reservation_path(reservation) %>
      <%= link_to '削除', reservation, method: :delete, data: { confirm: '本当に削除してよろしいですか?' } %>

    </div>
  <% end %>
<% end %>

<%= link_to '予約はこちらから', new_icp_reservation_path %>
